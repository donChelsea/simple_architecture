<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SingleZodiacActivity">

    <ImageView
        android:id="@+id/zodiac_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        tools:layout_editor_absoluteX="118dp"
        tools:srcCompat="@tools:sample/avatars[6]" />

    <TextView
        android:id="@+id/zodiac_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zodiac_name"
        app:layout_constraintTop_toBottomOf="@id/zodiac_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="36dp"/>

    <TextView
        android:id="@+id/zodiac_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zodiac date"
        app:layout_constraintTop_toBottomOf="@id/zodiac_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="20sp" />

</android.support.constraint.ConstraintLayout>